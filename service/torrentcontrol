### BEGIN INIT INFO
# Provides: torrentcontrol
# Required-Start: $remote_fs $syslog
# Required-Stop: $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: torrentcontrol
# Description: torrentcontrol
### END INIT INFO
 
 
#! /bin/sh

YOUTUPI_HOME=/home/pi/torrentcontrol 
YOUTUPI_USER=pi
 
export HOME
case "$1" in
    start)
        echo "Starting torrentcontrol"
        cd $YOUTUPI_HOME
        sudo -u $YOUTUPI_USER ./torrentcontrol.py >/dev/null 2>&1 &
    ;;
    stop)
        echo "Stopping torrentcontrol"
        LCD_PID=`ps auxwww | grep torrentcontrol.py | head -1 | awk '{print $2}'`
        kill -9 $LCD_PID
    ;;
    *)
        echo "Usage: /etc/init.d/torrentcontrol {start|stop}"
        exit 1
    ;;
esac
exit 0
